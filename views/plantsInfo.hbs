<h1>{{plant.species}} Info</h1>

<span>{{plant.family}}</span>
<br>
<span>{{plant.light}}</span>
<br>
<span>{{plant.climate}}</span>
<br>
<span>{{plant.maitenance}}</span>
<br>
<span>{{plant.image}}</span>

<a href="/plants/{{plant._id}}/edit">Edit This Plant</a>


<form action="/plants/{{plant._id}}/delete" method="post">
<button>Delete This Plant</button>
</form>

<a href="/plants/{{plant._id}}/comments/new">Add a Comment For This Plant</a>

<div>
  <h2>Comments For This Plant</h2>
  <hr>
  {{#each plant.comments}}
    <h4>{{this.reviewer}}</h4>
    <p>{{this.content}}</p>
    <div>{{@index}}</div>
    <form action="/plants/{{../plant._id}}/comments/delete/{{@index}}" method="post">
      <button>Delete This Comment</button>
    </form>
    <hr>
  {{/each}}
</div>


